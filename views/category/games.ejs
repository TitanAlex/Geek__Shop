<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>

<div class="catalog">
    <div class="catalog__head">
        <div class="catalog__title">
            <h2>Игры</h3>
        </div>
        <div class="line"></div>
    </div>
<% for (let i = 0; i < games.length; i++) { %>
<div class="container">
            <div class="product">
                <div class="image">
                    <a  href="/games/<%= games[i].id %>">
                    <img  class="container-img" src="img/games/<%= games[i].image %>" alt="ERROR"></a>
                </div>
                <div class="info">
                    <h3><%= games[i].title %></h3>

                    <ul class="rating">
                        <li><ion-icon name="star"></ion-icon></li>
                        <li><ion-icon name="star"></ion-icon></li>
                        <li><ion-icon name="star"></ion-icon></li>
                        <li><ion-icon name="star"></ion-icon></li>
                        <li><ion-icon name="star-half"></ion-icon></li>
                    </ul>
                    <div class="info-price">
                        <span class="price"><%= games[i].prise %> <small>₽</small></span>
                        <button class="add-to-cart"><ion-icon name="cart-outline"></ion-icon></button>
                    </div>
                </div>
            </div>
       
</div>
<% } %>
</div>

<%- include('../particles/footer.ejs') %>